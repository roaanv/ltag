{
  "compilerOptions": {
    "strict" : true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "allowJs": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
